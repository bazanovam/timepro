<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Day</th>
    <th>Pl hour</th>
    <th>Ft hour</th>
    <th>Pd hour</th>
    <th>Ot hour</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.day %></td>
    <td><%= task.pl_hour %></td>
    <td><%= task.ft_hour %></td>
    <td><%= task.pd_hour %></td>
    <td><%= task.ot_hour %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

